ErrorDocument 404 /404.html



RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://bobux.site/$1 [R=301,L,NE]
Header always set Content-Security-Policy "upgrade-insecure-requests;"
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteEngine On

# Удаление .html расширения
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Перенаправление для языков ru и en без .html
RewriteRule ^ru$ ru.html [L]
RewriteRule ^home$ home.html [L]

# Отключение автоматического добавления слеша
DirectorySlash Off

ErrorDocument 403 /403.html
