ErrorDocument 404 /404.html

# Перенаправление на страницу на русском для русскоязычных пользователей
RewriteCond %{HTTP:Accept-Language} ^ru [NC]
RewriteRule ^(.*)$ /ru.html [L,R=301]

# Перенаправление на страницу на английском для остальных пользователей
RewriteRule ^(.*)$ /en.html [L,R=301]

RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://bobux.site/$1 [R=301,L,NE]
Header always set Content-Security-Policy "upgrade-insecure-requests;"
RewriteCond %{REQUEST_FILAME} !-f
RewriteCond %{REQUEST_FILENENAME} !-d
RewriteEngine On


RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]


RewriteRule ^ru$ ru.html [L]
RewriteRule ^home$ home.html [L]

DirectorySlash Off

ErrorDocument 403 /403.html
